@model TouristAgency.ViewModels.Vouchers.IndexViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Изменение данных путёвки</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="VoucherViewModel.DateBeginning" class="control-label"></label>
                <input asp-for="VoucherViewModel.DateBeginning" class="form-control" />
                <span asp-validation-for="VoucherViewModel.DateBeginning" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoucherViewModel.ExpirationDate" class="control-label"></label>
                <input asp-for="VoucherViewModel.ExpirationDate" class="form-control" />
                <span asp-validation-for="VoucherViewModel.ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoucherViewModel.HotelName" class="control-label"></label>
                <input asp-for="VoucherViewModel.HotelName" class="form-control" />
                <span asp-validation-for="VoucherViewModel.HotelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoucherViewModel.TypeRestName" class="control-label"></label>
                <input asp-for="VoucherViewModel.TypeRestName" class="form-control" />
                <span asp-validation-for="VoucherViewModel.TypeRestName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoucherViewModel.ClientFullName" class="control-label"></label>
                <input asp-for="VoucherViewModel.ClientFullName" class="form-control" />
                <span asp-validation-for="VoucherViewModel.ClientFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoucherViewModel.EmployeeFullName" class="control-label"></label>
                <input asp-for="VoucherViewModel.EmployeeFullName" class="form-control" />
                <span asp-validation-for="VoucherViewModel.EmployeeFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="VoucherViewModel.BookingNote" /> @Html.DisplayNameFor(model => model.VoucherViewModel.BookingNote)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="VoucherViewModel.PaymentNote" /> @Html.DisplayNameFor(model => model.VoucherViewModel.PaymentNote)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

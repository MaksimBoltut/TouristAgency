@model TouristAgency.Models.Voucher

@{
    ViewData["Title"] = "Добавление записи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавление новой путёвки</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateBeginning" class="control-label"></label>
                <input asp-for="DateBeginning" class="form-control" />
                <span asp-validation-for="DateBeginning" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotelID" class="control-label">Название отеля</label>
                <select asp-for="HotelID" class="form-control" asp-items="ViewBag.HotelID"></select>
                <span asp-validation-for="HotelID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeRestID" class="control-label">Наименование типа отдыха</label>
                <select asp-for="TypeRestID" class="form-control" asp-items="ViewBag.TypeRestID"></select>
                <span asp-validation-for="TypeRestID" class="text-danger"></span>
            </div>
            <div style="height: 200px; overflow:auto;">
                @foreach (var s in ViewBag.Services)
                {
                        <p><input type="checkbox" value="@s.ListID" name="services" />@s.Name</p>
                }
            </div>
        <div class="form-group">
            <label asp-for="ClientID" class="control-label">ФИО клиента</label>
            <select asp-for="ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
            <span asp-validation-for="ClientID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmployeeID" class="control-label">ФИО работника</label>
            <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
            <span asp-validation-for="EmployeeID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="BookingNote" /> @Html.DisplayNameFor(model => model.BookingNote)
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="PaymentNote" /> @Html.DisplayNameFor(model => model.PaymentNote)
                </label>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </form>
</div>

</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
